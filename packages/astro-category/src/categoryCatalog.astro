---
import CategoryItem from './categoryItem.astro';

interface ContentItem {
  slug: string;
  title: string;
}
interface CategoryItem {
  name: string;
  path: string;
}
interface Props {
  subContent: ContentItem[];
  subCategory: CategoryItem[];
  category: string;
}

const { subContent, subCategory, category } = Astro.props;
---

<p>Current Category: {category}</p>

{
  subCategory && subCategory.length > 0 && (
    <>
      <h2>SubCategory</h2>
      {subCategory.map((item) => (
        <CategoryItem
          title={item.name}
          url={`/category/${item.path}`}
        />
      ))}
    </>
  )
}
{
  subContent && subContent.length > 0 && (
    <>
      <h2>SubContent</h2>
      {subContent.map((item: any) => (
        <CategoryItem
          title={item.data.title}
          url={`/posts/${item.slug}/`}
        />
      ))}
    </>
  )
}
