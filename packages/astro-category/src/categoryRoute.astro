---
import CategoryItem from './categoryItem.astro';

interface Props {
  category: any;
  collection: string;
  root: string;
  linkStyle?: string;
  linkClassName?: string;
}

const { category, collection, root, linkStyle, linkClassName } = Astro.props;
---

<p>Current Category: {category.dir}</p>

{
  category.subCategory && category.subCategory.length > 0 && (
    <>
      <h2>SubCategory</h2>
      {category.subCategory.map((item: any) => (
        <CategoryItem
          title={item.name}
          url={`/${root}/${item.path}`}
          style={linkStyle}
          className={linkClassName}
        />
      ))}
    </>
  )
}
{
  category.subContent && category.subContent.length > 0 && (
    <>
      <h2>SubContent</h2>
      {category.subContent.map((item: any) => (
        <CategoryItem
          title={item.data.title}
          url={`/${collection}/${item.slug}/`}
          style={linkStyle}
          className={linkClassName}
        />
      ))}
    </>
  )
}
