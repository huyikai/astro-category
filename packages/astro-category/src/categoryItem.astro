---
interface Props {
  title: string;
  url: string;
  style?: string;
}
const { title, url, style } = Astro.props;
---

<a
  class="link"
  href={url}
  style={style}
>
  {title}
</a>
<style>
  .link {
    margin: 0 5px;
    text-decoration: none;
    color: inherit;
  }
  .link:hover {
    text-decoration: underline;
  }
</style>
