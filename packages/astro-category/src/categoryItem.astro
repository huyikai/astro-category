---
interface Props {
  title: string;
  url: string;
  style?: string;
  className?: string;
}
const { title, url, style, className } = Astro.props;
---

<a
  class={`link ${className}`}
  href={url}
  style={style}
>
  {title}
</a>
<style>
  .link {
    margin: 0 5px;
    text-decoration: none;
  }
  .link:hover {
    text-decoration: underline;
  }
</style>
